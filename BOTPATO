    <script>
        // Tab functionality
        document.getElementById('prelive-tab').addEventListener('click', function() {
            showTab('prelive');
        });
        
        document.getElementById('live-tab').addEventListener('click', function() {
            showTab('live');
        });
        
        document.getElementById('stats-tab').addEventListener('click', function() {
            showTab('stats');
        });
        
        function showTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.add('hidden');
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('[id$="-tab"]').forEach(tab => {
                tab.classList.remove('tab-active');
            });
            
            // Show selected tab content
            document.getElementById(tabName + '-content').classList.remove('hidden');
            
            // Add active class to selected tab
            document.getElementById(tabName + '-tab').classList.add('tab-active');
        }
        
        // Simulate live updates for demo purposes
        setInterval(() => {
            const liveTab = document.getElementById('live-tab');
            if (!liveTab.classList.contains('tab-active')) {
                liveTab.classList.add('animate-pulse');
                setTimeout(() => {
                    liveTab.classList.remove('animate-pulse');
                }, 2000);
            }
        }, 10000);
    </script>
</body>
</html>
